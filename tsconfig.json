{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",              /* Source files */
    "outDir": "./dist",              /* Compiled JS files */

    /* Language and Environment */
    "target": "ES2020",              /* Output JS version */
    "module": "CommonJS",            /* Use CommonJS (ง่ายสุดเวลา dev) */
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],

    /* Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict Type-Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Interop */
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/server.ts"],
  "exclude": ["node_modules", "dist"]
}
